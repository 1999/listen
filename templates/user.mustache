<header>
    <form class="form-inline" role="form">
        <div class="form-group">
            <input size="35" class="form-control input-lg" type="search" placeholder="{{placeholder}}">
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default btn-lg search">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </div>
        <div class="form-group player-buttons">
            <span class="glyphicon glyphicon-play play" role="button"></span>
            <span class="glyphicon glyphicon-pause pause hidden" role="button"></span>
            <span class="glyphicon glyphicon-step-backward prev" role="button"></span>
            <span class="glyphicon glyphicon-step-forward next" role="button"></span>
        </div>
        <div class="form-group player-mode">
            <span title="{{shuffleTitle}}" class="glyphicon glyphicon-random mode{{#isShuffled}} active{{/isShuffled}}" data-mode="shuffle" role="button"></span>
            <span title="{{repeatTitle}}" class="glyphicon glyphicon-repeat mode{{#isRepeated}} active{{/isRepeated}}" data-mode="repeat" role="button"></span>
        </div>
        <div class="form-group player-volume">
            <input type="range" min="0" max="1" step="0.01" value="{{volume}}">
        </div>
        <div class="form-group pull-right manage-local">
            <span class="glyphicon glyphicon-cloud-download local">
                <span class="counter"></span>
            </span>
        </div>
    </form>
    <div class="playing-progress" style="width: 0"></div>
</header>
<section class="loading-content"></section>

<section class="info"></section>
<section class="music"></section>
