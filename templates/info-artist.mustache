{{#hasArtistDescription}}
    <p class="lead">{{{artistDescription}}}</p>
{{/hasArtistDescription}}

{{#albums}}
    <figure data-src="{{cover}}">
        <p>
            <a href="album:{{artist}} - {{title}}" data-mbid="{{mbid}}" data-ymid="{{ymid}}" data-artist="{{artist}}" data-album="{{title}}">
                <img src="" width="126" height="126" alt="{{title}}" class="img-rounded hidden">
                <span class="glyphicon glyphicon-ban-circle nothing text-center hidden"></span>
            </a>
        </p>
        <div class="cover-loading">
            <div class="spinner"></div>
        </div>
        <figcaption class="text-center">
            <a href="album:{{artist}} - {{title}}" data-mbid="{{mbid}}" data-ymid="{{ymid}}">{{title}}</a>
        </figcaption>
    </figure>
{{/albums}}

{{#similarList.length}}
    <div class="lead similar">
        <span>{{similarArtists}}:</span>
        <ul>
            {{#similarList}}
                <li><a href="artist:{{.}}">{{.}}</a></li>
            {{/similarList}}
        </ul>
    </div>
{{/similarList.length}}
