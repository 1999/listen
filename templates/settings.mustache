{{> header-pay}}

<form role="form" class="settings">
    <div class="form-group">
        <label>{{vkAuthTitle}}</label>
        <div>
            <button type="button" class="btn btn-danger drop-vk-auth">{{dropVkAuth}}</button>
        </div>
    </div>
    <div class="form-group">
        <label>{{lastFmAuthTitle}}</label>
        <div>
            {{#lastFmAuthorized}}
                <button type="button" class="btn btn-danger drop-lastfm-token">{{dropLastFmAuth}}</button>
            {{/lastFmAuthorized}}

            {{^lastFmAuthorized}}
                <button type="button" class="btn btn-default get-lastfm-token">{{getLastFmAuth}}</button>
            {{/lastFmAuthorized}}
        </div>
    </div>
    <div class="form-group">
        <label for="smoothSwitch">{{smoothSwitchTitle}}</label>
        <div class="radio">
            <label>
                <input type="radio" name="smoothSwitch" id="smoothSwitch" value="1" checked>
                {{yes}}
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="smoothSwitch" id="smoothSwitch" value="0">
                {{no}}
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="showNotifications">{{showNotificationsTitle}}</label>
        <div class="radio">
            <label>
                <input type="radio" name="showNotifications" id="showNotifications" value="1" checked>
                {{yes}}
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="showNotifications" id="showNotifications" value="0">
                {{no}}
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="sendStat">{{sendStatisticsTitle}}</label>

        <div class="radio">
            <label>
                <input type="radio" name="sendStat" id="sendStat" value="1" checked>
                {{yes}}
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="sendStat" id="sendStat" value="0">
                {{no}}
            </label>
        </div>
    </div>
</form>