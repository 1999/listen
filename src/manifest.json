{
    "name" : "Listen! DEV",
    "version" : "4.7",
    "manifest_version" : 2,
    "minimum_chrome_version" : "29",
    "description" : "__MSG_appDescription__",
    "default_locale" : "ru",

    "app": {
        "background": {
            "scripts": [
                "config.js",
                "lib/utils.js",
                "lib/md5.js",
                "lib/cpa.js",
                "background/modules/templates.js",
                "background/modules/syncfs.js",
                "background/modules/cpa.js",
                "background/modules/covers.js",
                "background/core.js"
            ]
        }
    },

    "changelog": {
        "4.1": [
            "dnd"
        ],
        "4.0": [
            "captcha",
            "icon"
        ],
        "3.3": [
            "recommend",
            "add_to_audio"
        ],
        "3.2": [
            "cyrillic"
        ],
        "3.0": [
            "settings",
            "lastfm",
            "navigation",
            "lovely_songs",
            "hotkeys",
            "notifications",
            "fulltext_search",
            "sound_problems"
        ]
    },

    "icons" : {
        "128" : "pics/icons/128.png",
        "48" : "pics/icons/48.png",
        "16" : "pics/icons/16.png"
    },

    "kiosk_enabled": true,
    "offline_enabled": true,

    "sandbox": {
        "pages": ["sandbox/page.html"]
    },

    "permissions" : [
        "alarms",
        "app.runtime",
        "app.window",
        "fullscreen",
        "identity",
        "notifications",
        "storage",
        "syncFileSystem",
        "unlimitedStorage",
        "*://*/*"
    ]
}
